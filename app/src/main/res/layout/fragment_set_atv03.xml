<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SetAtv1"
    android:orientation="vertical"
    app:layout_gravity="center"
    android:layout_margin="8dp"
    android:paddingBottom="64dp"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/progressAtv3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:rcBackgroundPadding="5dp"
        app:rcBackgroundColor="#E6DEDE"
        app:rcProgressColor="#4CAF50"
        app:rcRadius="24dp"
        app:rcMax="10"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/editQuestionAtv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Question."
        android:textSize="24sp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/descAtv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the alternatives and choose the correct one."
        android:textSize="16sp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/radioAtv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            >

            <RadioButton
                android:id="@+id/rdBtnAlterna1Atv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <EditText
                android:id="@+id/editAlterna1Atv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:hint="Alternativa 1."/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            >

            <RadioButton
                android:id="@+id/rdBtnAlterna2Atv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/editAlterna2Atv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:hint="Alternativa 2."/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            >

            <RadioButton
                android:id="@+id/rdBtnAlterna3Atv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/editAlterna3Atv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:hint="Alternativa 3."/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/rdBtnAlterna4Atv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/editAlterna4Atv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:hint="Alternativa 4."/>
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/editurlAtv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the MP3 download url"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:id="@+id/descAtv3_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How many points are worth the screen?"
        android:textSize="16sp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menosAtv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            app:backgroundTint="@color/fui_bgEmail"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointsAtv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/maisAtv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/verde_correto"
            android:text="+"
            android:textStyle="bold" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/imgBtnNextSetAtv3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/imagebutton_nextpage"
        android:background="@color/fui_transparent"
        />


    </LinearLayout>

</ScrollView>