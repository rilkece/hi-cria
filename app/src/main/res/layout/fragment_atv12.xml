<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnsAnswerAtv12"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".fragAtv12">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/txtPerguntaAtv12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/acme"
        android:text="@string/loading"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        >
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/playerAtv12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow_black_24dp"
            app:fabSize="mini"/>
        <TextView
            android:id="@+id/txtLoadingAtv12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/complementoAtv12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:autoSizeMaxTextSize="28sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/acme"
        android:text="@string/loading"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearAnswersAtv12"
        android:layout_margin="8dp"
        android:background="@drawable/scrollviewborder"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAnswerAtv12"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:alignContent="flex_start"
        app:flexWrap="wrap"
        android:id="@+id/linearButtonsAtv12"
        android:layout_margin="8dp"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWordAtv12_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/branco"
            android:background="@color/design_default_color_primary_dark"
            app:backgroundTint="@color/design_default_color_primary_dark"
            app:cornerRadius="4dp"
            app:strokeColor="@color/design_default_color_primary"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:layout_marginEnd="4dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWordAtv12_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/branco"
            android:background="@color/design_default_color_primary_dark"
            app:backgroundTint="@color/design_default_color_primary_dark"
            app:cornerRadius="4dp"
            app:strokeColor="@color/design_default_color_primary"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:layout_marginEnd="4dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWordAtv12_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/branco"
            android:background="@color/design_default_color_primary_dark"
            app:backgroundTint="@color/design_default_color_primary_dark"
            app:cornerRadius="4dp"
            app:strokeColor="@color/design_default_color_primary"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:layout_marginEnd="4dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWordAtv12_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/branco"
            android:background="@color/design_default_color_primary_dark"
            app:backgroundTint="@color/design_default_color_primary_dark"
            app:cornerRadius="4dp"
            app:strokeColor="@color/design_default_color_primary"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:layout_marginEnd="4dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWordAtv12_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/branco"
            android:background="@color/design_default_color_primary_dark"
            app:backgroundTint="@color/design_default_color_primary_dark"
            app:cornerRadius="4dp"
            app:strokeColor="@color/design_default_color_primary"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:layout_marginEnd="4dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWordAtv12_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/branco"
            android:background="@color/design_default_color_primary_dark"
            app:backgroundTint="@color/design_default_color_primary_dark"
            app:cornerRadius="4dp"
            app:strokeColor="@color/design_default_color_primary"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:layout_marginEnd="4dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWordAtv12_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/branco"
            android:background="@color/design_default_color_primary_dark"
            app:backgroundTint="@color/design_default_color_primary_dark"
            app:cornerRadius="4dp"
            app:strokeColor="@color/design_default_color_primary"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:layout_marginEnd="4dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWordAtv12_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/branco"
            android:background="@color/design_default_color_primary_dark"
            app:backgroundTint="@color/design_default_color_primary_dark"
            app:cornerRadius="4dp"
            app:strokeColor="@color/design_default_color_primary"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:layout_marginEnd="4dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWordAtv12_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/branco"
            android:background="@color/design_default_color_primary_dark"
            app:backgroundTint="@color/design_default_color_primary_dark"
            app:cornerRadius="4dp"
            app:strokeColor="@color/design_default_color_primary"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:layout_marginEnd="4dp"
            />

    </com.google.android.flexbox.FlexboxLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerifyAtv12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/botaoEntrar"
        app:icon="@drawable/ic_spellcheck_white_24dp"
        app:iconGravity="textStart"
        android:layout_gravity="center"
        />
    </LinearLayout>

</ScrollView>