<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/typeAnswerAudioAtv10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragAtv10"
    android:background="#ffffff"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtPerguntaAtv10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/acme"
        android:text="@string/loading"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="32sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/complementoAtv10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/acme"
        android:text="@string/loading"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="28sp"
        android:textStyle="bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/playerAtv10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_play_arrow_black_24dp"/>
    <TextView
        android:id="@+id/txtLoadingAtv10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/loading"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/respostaAtv10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/acme"
        android:text="@string/loading"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="20sp"
        android:layout_marginVertical="32dp"
        android:visibility="invisible"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputAtv10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/answer"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/design_default_color_primary"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerifyAtv10"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/botaoEntrar"
            app:icon="@drawable/ic_spellcheck_white_24dp"
            android:layout_margin="8dp"
            />
    </LinearLayout>
    </LinearLayout>
</ScrollView>