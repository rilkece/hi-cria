<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Performance"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorPrimaryDark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/imgbtnGamePerformanceBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="@color/telaLogin"
            app:srcCompat="@drawable/voltar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textGameView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_ranking"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/branco"/>

            <TextView
                android:id="@+id/txtGamePerformanceActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/Progress3"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/meuRecyclerGamePerformance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark" />
    </ScrollView>

</LinearLayout>